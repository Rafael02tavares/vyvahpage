---
import Layout from "../layouts/Layout.astro"
import Cadastro from "../pages/Cadastro.astro"
---

<Layout title="login">
    <div class="py-40">
        <div class="flex flex-row mt-10">
            <div class="basis-1/3 ml-10">
                <figure>
                    
                </figure>
            </div>
    
            <div class="basis-1/4 p-50 ml-20 box-border h-100 w-2 p-5 border-4 mr-5 bg-slate-300 text-center justify-center">
                <form id="loginForm">
                    <label class="font-semibold" for="username">Nome de Usuário:</label><br>
                    <input class="rounded-lg" type="text" id="username" name="username" required><br>
    
                    <label class="font-semibold" for="password">Senha:</label><br>
                    <input class="rounded-lg" type="password" id="password" name="password" required><br>
    
                    <button class="bg-orange-500 rounded-lg mt-3 ml-3 p-1 hover:bg-orange-800" type="submit">Entrar</button><br>
                </form>
    
                <p>ou</p>
                <a href="#">Esqueceu a senha?</a><br>
                Não tem uma conta? <a href="/Cadastro">Cadastre-se</a> <!-- Corrigido o link para cadastro -->
    
                <!-- Exibe a mensagem de erro, caso o login falhe -->
                <p id="errorMessage" class="text-red-500 mt-3 hidden">Nome de usuário ou senha incorretos!</p>
            </div>
        </div>
    </div>
</Layout>  